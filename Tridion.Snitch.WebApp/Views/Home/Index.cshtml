@model Tridion.Snitch.WebApp.Models.Peeps

@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">

    <h1>Tridion Snitch Dashboard</h1>

</div>

<div class="row">
    @foreach (var item in Model.UserList)
    {
        <div class="col-md-4">
            <h2>Widget</h2>
            <p>
                @item.Name
                <ul>
                    @foreach (var action in item.UserActions)
                    {
                        <li>
                             <a ng-click class="useraction" href="@action.UserActionId">
                                 @action.ActionName
                            </a>
                            <div class="actiondetail">
                                <div>@action.ActionDetails</div>
                                <div>@action.ActionTime</div>
                            </div>
                        </li>
                    }
                </ul>

               

                <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Export</a>
            </p>
        </div>
    }
   
</div>